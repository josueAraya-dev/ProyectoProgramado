<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.ControllersFXML.VentanaPrincipal">
   <children>
      <SplitPane dividerPositions="0.65" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f4f4f4;">
               <children>
                   <HBox alignment="CENTER" spacing="10.0">
    <Label text="Seleccionar Evento:" style="-fx-font-weight: bold;" />
    <ComboBox fx:id="comboEventosDisponibles" prefWidth="250.0" promptText="Elija un evento de la cartelera" />
            </HBox>
                  <Label text="MAPA DE ASIENTOS" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                  
                  <GridPane fx:id="gridAsientos" alignment="CENTER" hgap="5.0" vgap="5.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
                  
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label text="● Disponible" style="-fx-text-fill: green; -fx-font-weight: bold;" />
                        <Label text="● Seleccionado" style="-fx-text-fill: orange; -fx-font-weight: bold;" />
                        <Label text="● Ocupado" style="-fx-text-fill: red; -fx-font-weight: bold;" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <VBox spacing="15.0">
               <children>
                  <Label text="DATOS DE VENTA" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                  
                  <Separator prefWidth="200.0" />
                  
                  <Label text="Nombre del Cliente:" />
                  <TextField fx:id="txtNombre" promptText="Nombre completo" />
                  
                  <Label text="Identificación:" />
                  <TextField fx:id="txtId" promptText="Cédula o Pasaporte" />
                  
                  <Label text="Tipo de Boleto:" />
                  <ComboBox fx:id="comboTipoBoleto" maxWidth="Infinity" promptText="Seleccione tipo" />
                  
                  <Separator prefWidth="200.0" />
                  
                  <VBox spacing="5.0" style="-fx-background-color: #e8f5e9; -fx-padding: 10; -fx-background-radius: 5;">
                     <children>
                        <Label fx:id="lblPrecioBase" text="Precio Base: ₡0" />
                        <Label fx:id="lblPrecioFinal" text="Total a Pagar: ₡0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
                     </children>
                  </VBox>
                  
                  <Button fx:id="btnComprar" maxWidth="Infinity" prefHeight="40.0" text="Confirmar Compra" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" onAction="#confirmarCompra" />
                  
                  <Region VBox.vgrow="ALWAYS" />
                  
                  <Button onAction="#switchToAdmin" maxWidth="Infinity" text="Módulo Administrativo" style="-fx-background-color: #616161; -fx-text-fill: white; -fx-cursor: hand;" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
        </items>
      </SplitPane>
   </children>
</AnchorPane>